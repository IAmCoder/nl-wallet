{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "include": [
    "env.d.ts",
    "lib/**/*",
    "lib/**/*.vue"
  ],
  "exclude": [
    "lib/**/__tests__/*"
  ],
  "compilerOptions": {
    "strict": true,
    "composite": true,
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.build.tsbuildinfo",
    "paths": {
      "@/*": [
        "./lib/*"
      ]
    }
  }
}
